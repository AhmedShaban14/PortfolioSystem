@model IEnumerable<Core.Entities.PortfolioItem>

@{
    ViewData["Title"] = "Index";
}

    <h1 class="text-info card bg-light p-3" style="margin-top:100px" >Portfolio Items</h1>
    <div class="container">
        <a asp-action="Create" class="btn btn-primary mt-4 ">Create New</a>
        <table class="table table-striped table-hover mt-2">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProjectName)
                        </td>
                        <td style="width:600px">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <img src="~/img/portfolio/@item.ImageUrl" style="width:80px;height:80px;" class="img-thumbnail" alt="Alternate Text" />
                        </td>
                        <td>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-trash"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>   
 
